# ===================================
# CONFIGURATION DE L'APPLICATION
# ===================================

# URL de base de l'application (sans slash final)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development # development, staging, production

# ===================================
# CONFIGURATION APPWRITE
# ===================================

# Configuration Appwrite (obligatoire en production)
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your-project-id

# Clé API Appwrite (pour les opérations côté serveur)
# ATTENTION: Ne jamais exposer cette clé côté client
APPWRITE_API_KEY=your-api-key-here

# ID de la base de données Appwrite
APPWRITE_DATABASE_ID=default

# Configuration pour le développement local
# NEXT_PUBLIC_APPWRITE_ENDPOINT=http://localhost/v1
# NEXT_PUBLIC_APPWRITE_HOSTNAME=http://localhost:3000

# ===================================
# AUTHENTIFICATION
# ===================================

# Clé secrète pour les sessions (générer une chaîne aléatoire sécurisée)
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Fournisseurs OAuth (optionnel)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# FACEBOOK_CLIENT_ID=
# FACEBOOK_CLIENT_SECRET=

# ===================================
# ANALYTIQUES ET SUIVI
# ===================================

# Google Analytics 4 (optionnel)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager (optionnel)
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXX

# ===================================
# COLLECTIONS APPWRITE
# ===================================

# ID des collections Appwrite
APPWRITE_STORES_COLLECTION_ID=stores
APPWRITE_SALES_COLLECTION_ID=sales
APPWRITE_CLIENTS_COLLECTION_ID=clients
APPWRITE_PRODUCTS_COLLECTION_ID=products
APPWRITE_SELLERS_COLLECTION_ID=sellers
APPWRITE_SAV_TICKETS_COLLECTION_ID=sav_tickets
APPWRITE_INTERVENTIONS_COLLECTION_ID=interventions
APPWRITE_TECHNICIANS_COLLECTION_ID=technicians

# ===================================
# CONFIGURATION EMAIL
# ===================================

# Configuration SMTP pour les emails (optionnel)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=noreply@example.com

# ===================================
# SÉCURITÉ
# ===================================

# Taux limite pour les requêtes API (requêtes par minute)
RATE_LIMIT=100

# Clé de chiffrement pour les données sensibles
ENCRYPTION_KEY=your-encryption-key-here

# ===================================
# FONCTIONNALITÉS EXPÉRIMENTALES
# ===================================

# Activer les fonctionnalités expérimentales (true/false)
NEXT_PUBLIC_EXPERIMENTAL_FEATURES=false

# ===================================
# JOURNALISATION
# ===================================

# Niveau de journalisation (error, warn, info, debug, trace)
LOG_LEVEL=info

# Activer la journalisation dans la console (true/false)
LOG_TO_CONSOLE=true

# Activer la journalisation dans des fichiers (true/false)
LOG_TO_FILE=false

# ===================================
# TÉLÉMÉTRIE
# ===================================

# Activer la télémétrie (true/false)
NEXT_TELEMETRY_DISABLED=0

# Clé de télémétrie (optionnel)
# TELEMETRY_KEY=your-telemetry-key

# ===================================
# OPTIMISATION ET PERFORMANCE
# ===================================

# Désactiver la télémétrie Next.js
NEXT_TELEMETRY_DISABLED=1

# Configuration du cache (en secondes)
CACHE_TTL=3600 # 1 heure

# ===================================
# SÉCURITÉ
# ===================================

# Clé secrète pour le chiffrement (générer une chaîne aléatoire sécurisée)
ENCRYPTION_SECRET=your-encryption-key-here

# Liste des domaines autorisés pour les images (séparés par des virgules)
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,*.sodiluxe.com,fra.cloud.appwrite.io

# ===================================
# CONFIGURATION DU DÉPLOIEMENT
# ===================================

# Pour Netlify
NETLIFY_NEXT_PLUGIN_SKIP=true
NETLIFY_USE_YARN=true

# Pour Vercel
VERCEL_ENV=development
VERCEL_URL=http://localhost:3000

# ===================================
# JOURNALISATION ET SURVEILLANCE
# ===================================

# Niveau de journalisation (error, warn, info, debug, trace)
LOG_LEVEL=info

# Sentry (optionnel)
# NEXT_PUBLIC_SENTRY_DSN=
# SENTRY_ORG=
# SENTRY_PROJECT=
# SENTRY_AUTH_TOKEN=

# ===================================
# FONCTIONNALITÉS EXPÉRIMENTALES
# ===================================

# Activer les fonctionnalités expérimentales (true/false)
NEXT_PUBLIC_EXPERIMENTAL_FEATURES=false